---
import { siteConfig } from '../data/siteData';
---

<section id="contact" class="py-24 bg-transparent relative overflow-hidden">
  <div class="container mx-auto px-6 relative z-10">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-4 uppercase tracking-wider title-underline">Contacto</h2>
      <p class="text-xl text-sw-yellow font-medium text-glow-yellow subtitle-accent">Envíame una transmisión</p>
    </div>

    <div class="grid lg:grid-cols-2 gap-12 max-w-6xl mx-auto">
      <div class="p-8 rounded-lg border border-sw-yellow/30 bg-black/60 lightsaber-border shadow-glow-yellow">
        <p class="text-gray-300 mb-8 leading-relaxed">
          ¿Listo para tu siguiente misión? Contáctame y planifiquemos el salto al hiperespacio.
        </p>

        <div class="space-y-6">
          <div class="flex items-start gap-4">
            <div class="w-12 h-12 bg-black border border-sw-yellow/40 rounded-lg flex items-center justify-center flex-shrink-0 shadow-glow-yellow">
              <svg class="w-6 h-6 text-sw-yellow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <div>
              <p class="font-semibold text-white uppercase text-sm">Email</p>
              <a href={`mailto:${siteConfig.email}`} class="text-sw-yellow hover:text-sw-gold transition-colors">
                {siteConfig.email}
              </a>
            </div>
          </div>

          <div class="flex items-start gap-4">
            <div class="w-12 h-12 bg-black border border-sw-yellow/40 rounded-lg flex items-center justify-center flex-shrink-0 shadow-glow-yellow">
              <svg class="w-6 h-6 text-sw-yellow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <div>
              <p class="font-semibold text-white uppercase text-sm">Ubicación</p>
              <p class="text-gray-300">{siteConfig.address}</p>
            </div>
          </div>
        </div>

        <div class="mt-8 flex gap-4">
          <a href={siteConfig.social.github} class="w-10 h-10 bg-black border border-sw-yellow/40 rounded-lg flex items-center justify-center text-gray-300 hover:border-sw-yellow hover:text-sw-yellow transition-all shadow-glow-yellow">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
            </svg>
          </a>
          <a href={siteConfig.social.linkedin} class="w-10 h-10 bg-black border border-sw-yellow/40 rounded-lg flex items-center justify-center text-gray-300 hover:border-sw-yellow hover:text-sw-yellow transition-all shadow-glow-yellow">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
          <a href={siteConfig.social.twitter} class="w-10 h-10 bg-black border border-sw-yellow/40 rounded-lg flex items-center justify-center text-gray-300 hover:border-sw-yellow hover:text-sw-yellow transition-all shadow-glow-yellow">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
            </svg>
          </a>
        </div>
      </div>

      <div class="bg-black/70 rounded-lg p-8 border border-sw-yellow/30 lightsaber-border shadow-glow-yellow">
        <form id="contact-form" class="space-y-6">
          <input type="hidden" name="access_key" value="YOUR_WEB3FORMS_ACCESS_KEY">
          <input type="hidden" name="subject" value="Nuevo mensaje desde Portfolio JPARVEL">
          <input type="hidden" name="from_name" value="Portfolio JPARVEL">

          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-300 mb-2 uppercase tracking-wide">Nombre</label>
              <input
                type="text"
                name="name"
                required
                class="w-full px-4 py-3 bg-black border border-sw-yellow/30 text-white placeholder-gray-500 focus:border-sw-yellow focus:outline-none transition-colors"
                placeholder="Tu nombre"
              />
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-300 mb-2 uppercase tracking-wide">Apellido</label>
              <input
                type="text"
                name="lastname"
                required
                class="w-full px-4 py-3 bg-black border border-sw-yellow/30 text-white placeholder-gray-500 focus:border-sw-yellow focus:outline-none transition-colors"
                placeholder="Tu apellido"
              />
            </div>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2 uppercase tracking-wide">Email</label>
            <input
              type="email"
              name="email"
              required
              class="w-full px-4 py-3 bg-black border border-sw-yellow/30 text-white placeholder-gray-500 focus:border-sw-yellow focus:outline-none transition-colors"
              placeholder="email@galaxia.com"
            />
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2 uppercase tracking-wide">Asunto</label>
            <input
              type="text"
              name="topic"
              required
              class="w-full px-4 py-3 bg-black border border-sw-yellow/30 text-white placeholder-gray-500 focus:border-sw-yellow focus:outline-none transition-colors"
              placeholder="¿Cuál es tu misión?"
            />
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2 uppercase tracking-wide">Mensaje</label>
            <textarea
              name="message"
              rows="4"
              required
              class="w-full px-4 py-3 bg-black border border-sw-yellow/30 text-white placeholder-gray-500 focus:border-sw-yellow focus:outline-none transition-colors resize-none"
              placeholder="Cuéntame los detalles..."
            ></textarea>
          </div>

          <div id="form-message" class="hidden p-4 rounded border"></div>

          <button
            type="submit"
            id="submit-btn"
            class="w-full px-6 py-4 bg-sw-yellow text-black font-bold hover:bg-sw-gold active:bg-sw-gold active:scale-95 transition-all uppercase tracking-wide shadow-glow-yellow"
          >
            Enviar mensaje
          </button>
        </form>
      </div>
    </div>
  </div>
</section>

<script>
  const form = document.getElementById('contact-form') as HTMLFormElement;
  const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
  const formMessage = document.getElementById('form-message') as HTMLDivElement;

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const formData = new FormData(form);
    const object = Object.fromEntries(formData);
    const json = JSON.stringify(object);

    // Deshabilitar botón y mostrar estado de carga
    submitBtn.disabled = true;
    submitBtn.textContent = 'Enviando...';

    try {
      const response = await fetch('https://api.web3forms.com/submit', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'Accept': 'application/json'
        },
        body: json
      });

      const result = await response.json();

      if (response.ok && result.success) {
        // Mostrar mensaje de éxito
        formMessage.textContent = '¡Mensaje enviado con éxito! La Fuerza está contigo.';
        formMessage.className = 'p-4 rounded border border-sw-yellow/50 bg-sw-yellow/10 text-sw-yellow';
        formMessage.classList.remove('hidden');

        // Limpiar formulario
        form.reset();

        // Ocultar mensaje después de 5 segundos
        setTimeout(() => {
          formMessage.classList.add('hidden');
        }, 5000);
      } else {
        throw new Error('Error en el envío');
      }
    } catch (error) {
      // Mostrar mensaje de error
      formMessage.textContent = 'Error al enviar el mensaje. El lado oscuro interfirió. Intenta de nuevo.';
      formMessage.className = 'p-4 rounded border border-red-500/50 bg-red-500/10 text-red-400';
      formMessage.classList.remove('hidden');

      // Ocultar mensaje después de 5 segundos
      setTimeout(() => {
        formMessage.classList.add('hidden');
      }, 5000);
    } finally {
      // Rehabilitar botón
      submitBtn.disabled = false;
      submitBtn.textContent = 'Enviar mensaje';
    }
  });
</script>
